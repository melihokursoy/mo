{
  "name": "@mo/ui",
  "version": "0.0.3",
  "description": "React UI component library with TailwindCSS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/melihokursoy/mo.git",
    "directory": "packages/ui"
  },
  "homepage": "https://github.com/melihokursoy/mo#readme",
  "bugs": {
    "url": "https://github.com/melihokursoy/mo/issues"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "tailwindcss",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "tsup && pnpm build:styles",
    "build:styles": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css --minify",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit",
    "storybook": "npx kill-port 6006 && pnpm build:styles && storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest run"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@mo/tailwind-config": "workspace:*",
    "@mo/typescript-config": "workspace:*",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/addons": "^7.6.17",
    "@storybook/manager-api": "^8.6.14",
    "@storybook/react-vite": "^10.1.11",
    "@tailwindcss/cli": "^4.0.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "kill-port": "^2.0.1",
    "playwright": "^1.57.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^10.1.11",
    "tailwindcss": "^4.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  },
  "publishConfig": {
    "access": "public"
  }
}
